<%@ Page Language="C#" MasterPageFile="MasterPage.Master" AutoEventWireup="true" CodeBehind="ArticleAdd.aspx.cs" Inherits="XueFu.Admin.ArticleAdd" %><%@ Import Namespace="XueFu.BLL" %><asp:Content ID="MasterContent" ContentPlaceHolderID="ContentPlaceHolder" runat="server">
<script type="text/javascript" src="http://cdn.bootcss.com/jquery/1.12.1/jquery.min.js"></script><div class="position"><img src="/Admin/images/PositionIcon.png"  alt=""/>公告<%=GetAddUpdate()%></div><div class="add" >		<ul>		<li class="left">分类：</li>		<li class="right"><asp:DropDownList class="classdropdown" ID="ClassID"  runat="server"  /></li>	</ul>		<ul>		<li class="left">标题：</li>		<li class="right"><XueFu:TextBox ID="Title" CssClass="input" runat="server" Width="400px"  CanBeNull="必填"/></li>	</ul>	<ul>		<li class="left">内容：</li>		<li class="right"><XueFu:TextBox ID="Summary" CssClass="input" runat="server" Width="500px" TextMode="MultiLine" CanBeNull="必填" Height="350px" /></li>	</ul>	<ul class="topitem">		<li class="left">是否开启：</li>		<li class="right"><asp:RadioButtonList ID="IsTop" runat="server" RepeatDirection="Horizontal"><asp:ListItem Value="1"  Selected="True">是</asp:ListItem><asp:ListItem Value="0">否</asp:ListItem></asp:RadioButtonList></li>	</ul>	<ul><asp:HiddenField ID="Hint" runat="server" /></ul></div><div class="action">    <asp:Button CssClass="button" ID="SubmitButton" Text=" 确 定 " runat="server"  OnClick="SubmitButton_Click" /></div><script language="javascript">$(function(){    $(".classdropdown").change(function(){        if($(this).val()=="1"){            $(".topitem").show();        }        else{            $(".topitem").hide();        }    })    $(".classdropdown").change();})</script></asp:Content>
